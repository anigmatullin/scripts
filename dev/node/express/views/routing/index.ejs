<%- include('../header') %>

<div class="row">
  <div class="table-title col-sm-12 col-md-12 col-lg-12 col-xl-11" style="margin: 20px">
    <h3 style="display: inline;"><b>Relay Groups</b></h3>

    <a href="/config/relaygrp/create" class="btn btn-success">
      <i class="material-icons">&#xE147;</i><span>Add</span>
    </a>

  </div>
</div>

<div class="row mt-3">

  <div class="col-1"></div>

  <div class="col-sm-10 col-md-8 col-lg-8 col-xl-8">
  
  <table id="rows" class="table table-bordered border-secondary nogrid">
  
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Description</th>
        <th>Action</th>
      </tr>
    </thead>
  
  <tbody>

    <% data.forEach(function(row) { %>


      <tr>
        <td><%= row.id %></td>
        <td><a href="/config/relaygrp/<%= row.id %>"><%= row.name %></a></td>
        <td><%= row.description %></td>
      
        <td>
          <a href="/config/relaygrp/edit/<%= row.id %>"     class="edit"><i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i></a>
          <a href="/config/relaygrp/delete/<%= row.id %>"   class="delete"><i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a>
        </td>
      
      </tr>

    <% }); %>
  
  </tbody>
  </table>
  
  
  </div>  <!-- column -->
  
  
  </div>
